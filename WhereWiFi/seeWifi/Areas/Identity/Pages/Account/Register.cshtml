@page
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@model RegisterModel

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions
@{
    ViewData["Title"] = "Register";
}

<div>
    @await Html.PartialAsync("_SelectLanguagePartial")
</div>
<br />
<br />

<div id="jumbo" class=" my-container jumbotron">
    <h3 class="text-center">@Localizer["Register"]</h3>
</div>

<div id="jumbo" class="my-containerMini">
<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @Localizer["Email"]
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localizer["Password"]
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localizer["ConfirmPassword"]
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@Localizer["Register"]</button>
        </form>
    </div>
</div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
