@page
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@model LoginModel

@inject IViewLocalizer Localizer
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    ViewData["Title"] = "Log in";
}
<div>
    @await Html.PartialAsync("_SelectLanguagePartial")
</div>
<br />
<br />

<div id="jumbo" class=" my-container jumbotron">
    <h3 class="text-center">@Localizer["LogIn"]</h3>
</div>


<div id="jumbo" class="my-containerMini">

    <section>
        <form id="account" method="post">

            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                @Localizer["Email"]
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Localizer["Password"]
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Localizer["LogInBtn"]</button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword"> @Localizer["Forgot"]</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["Register"]</a>
                </p>
            </div>
        </form>
    </section>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
