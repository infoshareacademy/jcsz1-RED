@model WiFi.Library.Models.HotSpotModel

@{
    ViewData["Title"] = "View";
    Layout = "_Layout";

}

<script src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0" type="text/javascript" charset="UTF-8"></script>
<script type="text/javascript" src="~/js/site.js"></script>

<h1>Uzupełnij dane nowego Hotspotu</h1>
<hr />
<div class="row">

    <div class="col-md-8">
        <div id="simpleMap" style="min-height: 350px"></div>
    </div>
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="fakeID" type="hidden" value="Added" class="form-control" />
                <span asp-validation-for="fakeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label">Location:</label>
                <input asp-for="LocationName" id="xlocation" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="LatitudeX" class="control-label">Latitude:</label>
                <input asp-for="LatitudeX" type="number" id="xlatitude" value="" class="form-control" />
                <span asp-validation-for="LatitudeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongitudeY" class="control-label">Longitude:</label>
                <input asp-for="LongitudeY" type="number" id="ylongitude" value="" class="form-control" />
                <span asp-validation-for="LongitudeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
