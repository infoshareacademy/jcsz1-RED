@model WiFi.Library.Models.HotSpotModel

@{
    ViewBag.Title = "Nowy Hotspot";
    Layout = "_Layout";

}

<script src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0" type="text/javascript" charset="UTF-8"></script>
<script type="text/javascript" src="~/js/site.js"></script>

<div id="jumbo" class=" my-container jumbotron">
    <h3 class="text-center">Dodawanie punktu HotSpot</h3>
    
</div>

<div class="row">

    <div class="col-md-8">
        <div id="simpleMap" style="min-height: 350px"></div>
    </div>
    <div class="col-md-4">
        
        <div id="jumbo" class="my-containerMini">
            <h6 class="text-center">Wskaż na mapie lokalizację nowego punktu lub wprowadź dane ręcznie.</h6>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="fakeID" type="hidden" value="Added" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label">Lokalizacja:</label>
                <input asp-for="LocationName" id="xlocation" class="form-control"/>
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatitudeX" class="control-label">Szerokość Geograficzna:</label>
                <input asp-for="LatitudeX" type="number" id="xlatitude" value="" class="form-control"/>
                <span asp-validation-for="LatitudeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongitudeY" class="control-label">Długość Geograficzna:</label>
                <input asp-for="LongitudeY" type="number" id="ylongitude" value="" class="form-control"/>
                <span asp-validation-for="LongitudeY" class="text-danger"></span>
            </div>
            <div class="form-group text-right">
                <input type="submit" value="Dodaj" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
