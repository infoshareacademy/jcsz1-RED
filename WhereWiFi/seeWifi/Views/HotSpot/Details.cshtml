@model seeWifi.ViewModels.HotSpotViewModel

@{
    ViewBag.Title = "Szczegóły hotspotów";
    Layout = "_Layout";
}

<script src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0" type="text/javascript" charset="UTF-8"></script>
<script type="text/javascript" src="~/js/site.js"></script>

<div id="jumbo" class=" my-container jumbotron">
    <h3 class="text-center">Edycja punktu HOTSPOT</h3>
</div>

<div class="row">
    
    <div class="container col-md-8">
        <div id="simpleMap" style="min-height: 350px"></div>
    </div>

    <div class="col-md-4">

        <div id="jumbo" class="my-containerMini">
            <h6 class="text-center">Wskaż prawidłową lokalizację punktu lub wprowadź dane ręcznie:</h6>
        </div>
        
            <form asp-antiforgery="true" asp-action="UpdateResult" asp-route-id="@Model.Number" method="post">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="LocationName" class="control-label">Lokalizacja:</label>
                        <input asp-for="LocationName" id="xlocation" class="form-control"/>
                        <span asp-validation-for="LocationName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LatitudeX" class="control-label">Szerokość Geograficzna:</label>
                        <input asp-for="LatitudeX" id="xlatitude" class="form-control"/>
                        <span asp-validation-for="LatitudeX" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="LongitudeY">Długość Geograficzna:</label>
                        <input asp-for="LongitudeY" id="ylongitude" class="form-control"/>
                        <span asp-validation-for="LongitudeY" class="text-danger"></span>
                    </div>

                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-success">Zatwierdź zmiany</button>
                    <button type="reset" class="btn btn-danger">Reset</button>
                </div>
            </form>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }

    </div>
</div>
