@model List<WiFi.Library.Models.HotSpotReportModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<title>Podejrzane duże transfery danych przychodzących</title>


<div id="jumbo" class=" my-container jumbotron">
    <h3 class="text-center">Podejrzane punkty HOTSPOT</h3>
    <p>  &#8621 Kiedy korzystamy z tych sieci nie wykonuj żadnych transakcji bankowych.</p>
    <p> &#8621 Traktuj każdą nieznaną sieć jako podejrzaną.</p>
    <p>  &#8621 Używaj programów zabezpieczających przed wirusami i atakami.</p>
</div>

<div class="my-container container">
    <table class="my-table table text-center">
        <thead>
            <tr>
                <th id="annoyingBorder">
                    Nr
                </th>
                <th>
                    Lokalizacja HotSpotNumber
                </th>
                <th>
                    Miesięczna liczba użytkowników
                </th>
                <th>
                    Transfer przychodzący [GB/miesiąc]
                </th>
                <th>
                    Transfer wychodzący [GB/miesiąc]
                </th>

                <th id="annoyingBorder">
                    Łączna wymiana danych [GB/miesiąc]
                </th>
            </tr>
        </thead>
        <tbody>
        
            @{
                int counter = 1;
            }
        @foreach (var hotSpot in Model)
            {
                <tr>
                    <td class="text-center">
                        @counter
                    </td>
                    <td class="text-left">
                        @hotSpot.LocationName
                    </td>
                    <td class="text-center">
                        @hotSpot.CurrentHotSpotUsers
                    </td>
                    <td class="
                    @if (@hotSpot.SuspiciousByIncomingTransfer)
                    {
                        @Html.Raw("text-danger")
                    }
                    ">
                        @hotSpot.IncomingTransfer.ToString("0.00")
                    </td>
                    <td class="
                    @if (@hotSpot.SuspiciousByOutgoingTransfer)
                    {
                        @Html.Raw("text-danger")
                    }">
                        @hotSpot.OutgoingTransfer.ToString("0.00")
                    </td>
                    <td class="
                    @if (@hotSpot.SuspiciousByTotal)
                    {
                        @Html.Raw("text-danger")
                    }">
                        @((hotSpot.OutgoingTransfer + hotSpot.IncomingTransfer).ToString("0.00"))
                    </td>
                </tr>
                counter++;
            }
        <tr>
            <td colspan="3" id="annoyingBorder" class="text-danger text-justify">(*)Podejrzane parametry</td>
        </tr>
        </tbody>
    </table>
</div>

