@model seeWifi.Models.HotSpotModel

@{
    ViewData["Title"] = "View";
    Layout = "_Layout";

}
<script>
    function GetMap() {
        var apiKey = "Aq1d61Jw4x4MYNoxuz2RwCqOWoBhSwj24oLJkqVBCdMrYVB7-21yCo9R9FtGWAmk";
        var map = new Microsoft.Maps.Map(document.getElementById("simpleMap"), { credentials: apiKey });
        map.setView({ center: new Microsoft.Maps.Location(54.365406, 18.615999), zoom: 10 });
        var pinInfobox = new Microsoft.Maps.Infobox(new Microsoft.Maps.Location(0, 0), { visible: false });
        var infoboxLayer = new Microsoft.Maps.EntityCollection();
        infoboxLayer.push(pinInfobox);
        Microsoft.Maps.Events.addHandler(map, 'click', function (e) {
            if (e.targetType == "map") {
                map.entities.clear();
                var point = new Microsoft.Maps.Point(e.getX(), e.getY());
                latlng = e.target.tryPixelToLocation(point);
                var marker = new Microsoft.Maps.Pushpin(latlng, { visible: true });
                map.entities.push(marker);
                getLocationDetails(latlng.latitude, latlng.longitude)
            }
        });
    }
    function getLocationDetails(lat, lng) {
        $.ajax({
            url: "http://dev.virtualearth.net/REST/v1/Locations/" + lat + "," + lng,
            dataType: "jsonp",
            data:
            {
                key: "Aq1d61Jw4x4MYNoxuz2RwCqOWoBhSwj24oLJkqVBCdMrYVB7-21yCo9R9FtGWAmk",
                includeEntityTypes: "Address",
                includeNeighborhood: "1",
                include: "ciso2"
            },
            jsonp: "jsonp",
            success: function (data) {
                var result = data.resourceSets[0];
                if (result) {
                    if (result.estimatedTotal > 0) {
                        document.getElementById('xlatitude').value = lat;
                        document.getElementById('ylongitude').value = lng;
                        document.getElementById('xlocation').value = result.resources[0].address.addressLine;
                    }
                    else {
                        alert("Lokalizacja niedostępna")
                    }
                }
            }
        });
    }
</script>
<body onload="GetMap();">
    <div id="simpleMap" style="position: relative; width: 600px; height: 500px;"></div>
</body>
<script src="http://ecn.dev.virtualearth.net/mapcontrol/mapcontrol.ashx?v=7.0" type="text/javascript" charset="UTF-8"></script>
<h1>Uzupełnij dane nowego Hotspotu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" id="xlocation" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LatitudeX" type="hidden" id="xlatitude" value="" class="form-control" />
                <span asp-validation-for="LatitudeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LongitudeY" type="hidden" id="ylongitude" value="" class="form-control" />
                <span asp-validation-for="LongitudeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
