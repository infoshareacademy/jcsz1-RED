@model seeWifi.Models.HotSpotModel

@{
    ViewData["Title"] = "View";
    Layout = "_Layout";

}
<h1>Uzupełnij dane nowego Hotspotu</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label"></label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LatitudeX" class="control-label"></label>
                <input asp-for="LatitudeX" type="number" class="form-control" />
                <span asp-validation-for="LatitudeX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LongitudeY" class="control-label"></label>
                <input asp-for="LongitudeY" type="number" class="form-control" />
                <span asp-validation-for="LongitudeY" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
